<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
  <title>Our Team | Creative Coding Community</title>
  <link rel="stylesheet" href="/css/team.css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
</head>

<body>
  <!-- ðŸ§­ Hero -->
  <section class="team-hero">
    <h1><i class="fas fa-users"></i> Meet Our Team</h1>
    <p>Innovators, coordinators, and builders of the C3 Community ðŸš€</p>
    <a href="/" class="back-btn"><i class="fas fa-arrow-left"></i> Back to Home</a>
  </section>

  <!-- ðŸ” Filter Bar -->
  <div class="filter-bar">
    <button class="filter-btn active" data-filter="all">All</button>
    <button class="filter-btn" data-filter="core">Core Team</button>
    <button class="filter-btn" data-filter="coordinator">Coordinators</button>
    <button class="filter-btn" data-filter="sub">Sub-Coordinators</button>
  </div>

  <!-- ðŸ‘¨â€ðŸ« Faculty Mentors (Always Visible) -->
  <section class="section" id="faculty-mentors">
    <div class="section-title">
      <h2>Our Faculty Mentors</h2>
    </div>
    <div class="faculty-grid">
      <div class="faculty-card">
        <div class="faculty-img-box">
          <img src="/assets/img/rajesh sir.jpg" alt="Rajesh Kumar" class="faculty-img">
        </div>
        <h3>Rajesh Kumar</h3>
        <p class="faculty-dept">CSE Department</p>
      </div>

      <div class="faculty-card">
        <div class="faculty-img-box">
          <img src="/assets/img/shafaque mam.jpg" alt="Shafaque Aziz" class="faculty-img">
        </div>
        <h3>Shafaque Aziz</h3>
        <p class="faculty-dept">CSE Department</p>
      </div>
    </div>
  </section>

  <!-- ðŸŒŸ Core Team -->
  <section class="team-section core">
    <h2>Core Team</h2>
    <div class="team-grid">
      <% coreMembers.forEach(member => { %>
        <div class="team-card">
          <div class="team-img"><img src="<%= member.img %>" alt="<%= member.name %>"></div>
          <h3><%= member.name %></h3>
          <p class="role"><%= member.role %></p>
          <div class="social-links">
            <a href="<%= member.github %>" target="_blank"><i class="fab fa-github"></i></a>
            <a href="<%= member.linkedin %>" target="_blank"><i class="fab fa-linkedin"></i></a>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- ðŸ‘©â€ðŸ’¼ Coordinators -->
  <section class="team-section coordinator">
    <h2>Our Coordinators</h2>
    <div class="team-grid">
      <% coordinators.forEach(member => { %>
        <div class="team-card">
          <div class="team-img"><img src="<%= member.img %>" alt="<%= member.name %>"></div>
          <h3><%= member.name %></h3>
          <p class="role"><%= member.role %></p>
          <div class="social-links">
            <a href="<%= member.github %>" target="_blank"><i class="fab fa-github"></i></a>
            <a href="<%= member.linkedin %>" target="_blank"><i class="fab fa-linkedin"></i></a>
          </div>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- ðŸ† Sub-Coordinators -->
  <section class="team-section sub">
    <h2>Sub-Coordinator Recruitment 2025</h2>
    <p>Congratulations to our new Sub-Coordinators ðŸŽ‰</p>
    <div class="sub-grid">
      <% subCoordinators.forEach(c => { %>
        <div class="sub-card">
          <img src="<%= c.img %>" alt="<%= c.name %>">
          <h3><%= c.name %></h3>
          <p class="roll"><%= c.roll %></p>
        </div>
      <% }) %>
    </div>
  </section>

  <script src="/js/team.js"></script>
</body>
</html>
