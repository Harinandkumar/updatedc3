<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manage Winners | Admin</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  <style>
    body {
      font-family: 'Poppins', sans-serif;
      background: #0b132b;
      color: #e5f4ff;
      margin: 0;
      padding: 2rem;
    }
    h1 {
      text-align: center;
      color: #00e0ff;
      margin-bottom: 1.5rem;
    }
    form {
      background: rgba(255,255,255,0.05);
      padding: 1.5rem;
      border-radius: 10px;
      backdrop-filter: blur(8px);
      max-width: 700px;
      margin: auto;
      box-shadow: 0 0 10px rgba(0,255,255,0.2);
    }
    input {
      width: 100%;
      margin: 0.4rem 0;
      padding: 0.6rem;
      border-radius: 6px;
      border: none;
      outline: none;
      background: rgba(255,255,255,0.1);
      color: white;
    }
    button {
      margin-top: 1rem;
      padding: 0.7rem 1.2rem;
      border: none;
      border-radius: 6px;
      background: linear-gradient(90deg, #00f0ff, #d94eff);
      color: black;
      font-weight: 600;
      cursor: pointer;
      transition: 0.3s;
    }
    button:hover {
      transform: scale(1.05);
      box-shadow: 0 0 10px rgba(0,255,255,0.3);
    }
    .table {
      width: 100%;
      max-width: 900px;
      margin: 2rem auto;
      border-collapse: collapse;
      background: rgba(255,255,255,0.05);
      border-radius: 10px;
      overflow: hidden;
    }
    th, td {
      padding: 0.8rem;
      text-align: center;
      border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    th {
      color: #00e0ff;
    }
    .delete-btn {
      background: #ff3b3b;
      color: white;
      border: none;
      padding: 0.4rem 0.8rem;
      border-radius: 5px;
      cursor: pointer;
    }
    .delete-btn:hover {
      background: #ff5c5c;
    }
  </style>
</head>

<body>
  <h1>üèÜ Manage Event Winners</h1>

  <form action="/admin/winners" method="POST">
    <h3>üéØ Add Winners for an Event</h3>
    <input type="text" name="eventName" placeholder="Event Name (e.g. UI-UX Arena)" required>

    <h4>ü•á 1st Place</h4>
    <input type="text" name="firstName" placeholder="Name" required>
    <input type="text" name="firstRoll" placeholder="Roll No" required>

    <h4>ü•à 2nd Place</h4>
    <input type="text" name="secondName" placeholder="Name" required>
    <input type="text" name="secondRoll" placeholder="Roll No" required>

    <h4>ü•â 3rd Place</h4>
    <input type="text" name="thirdName" placeholder="Name" required>
    <input type="text" name="thirdRoll" placeholder="Roll No" required>

    <button type="submit">Add Winners</button>
  </form>

  <table class="table">
    <tr>
      <th>Event</th>
      <th>ü•á 1st</th>
      <th>ü•à 2nd</th>
      <th>ü•â 3rd</th>
      <th>Action</th>
    </tr>
    <% winners.forEach(w => { %>
      <tr>
        <td><%= w.eventName %></td>
        <td><%= w.winners.find(x => x.position === '1st')?.name || '-' %></td>
        <td><%= w.winners.find(x => x.position === '2nd')?.name || '-' %></td>
        <td><%= w.winners.find(x => x.position === '3rd')?.name || '-' %></td>
        <td>
          <form action="/admin/winners/delete/<%= w._id %>" method="POST">
            <button class="delete-btn">Delete</button>
          </form>
        </td>
      </tr>
    <% }) %>
  </table>
</body>
</html>
