<!doctype html><html><head><meta charset="utf-8"><title>Notice Form</title><link rel="stylesheet" href="/css/main.css"></head><body><div class="section"><h2><%= notice ? 'Edit Notice' : 'Create Notice' %></h2><form method="POST" action="<%= notice ? ('/admin/notices/'+notice._id) : '/admin/notices' %>"><label>Title<input name="title" value="<%= notice ? notice.title : '' %>" required></label><label>Message<textarea name="message"><%= notice ? notice.message : '' %></textarea></label><label>Date<input name="date" type="date" value="<%= notice && notice.date ? new Date(notice.date).toISOString().split('T')[0] : '' %>"></label><button class="cta-button" type="submit">Save</button></form></div></body></html>
