<!doctype html><html><head><meta charset="utf-8"><title>Event Form</title><link rel="stylesheet" href="/css/main.css"></head><body><div class="section"><h2><%= event ? 'Edit Event' : 'Create Event' %></h2><form method="POST" action="<%= event ? ('/admin/events/'+event._id) : '/admin/events' %>"><label>Name<input name="name" value="<%= event ? event.name : '' %>" required></label><label>Description<textarea name="description"><%= event ? event.description : '' %></textarea></label><label>Date<input name="date" type="date" value="<%= event && event.date ? new Date(event.date).toISOString().split('T')[0] : '' %>"></label><label>Location<input name="location" value="<%= event ? event.location : '' %>"></label><label>Prize<input name="prize" value="<%= event ? event.prize : '' %>"></label><label>Image Link<input name="imagelink" value="<%= event ? event.imagelink : '' %>"></label><button class="cta-button" type="submit">Save</button></form></div></body></html>
